@model Hostel_Management.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Room</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>Room Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoomID" />

                <div class="form-group">
                    <label asp-for="RoomNumber" class="control-label"></label>
                    <input asp-for="RoomNumber" class="form-control" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfBeds" class="control-label"></label>
                    <input asp-for="NumberOfBeds" class="form-control" />
                    <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfFans" class="control-label"></label>
                    <input asp-for="NumberOfFans" class="form-control" />
                    <span asp-validation-for="NumberOfFans" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfTables" class="control-label"></label>
                    <input asp-for="NumberOfTables" class="form-control" />
                    <span asp-validation-for="NumberOfTables" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfChairs" class="control-label"></label>
                    <input asp-for="NumberOfChairs" class="form-control" />
                    <span asp-validation-for="NumberOfChairs" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsOccupied" /> @Html.DisplayNameFor(model => model.IsOccupied)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Room List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
