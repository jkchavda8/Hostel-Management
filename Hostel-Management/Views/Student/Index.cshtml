@model IEnumerable<Hostel_Management.Models.Student>

@{
    ViewData["Title"] = "Student Index";
}

<div class="container mt-5">
    <h1 class="text-center">Student Index</h1>

    <p class="text-end">
        <a asp-action="Register" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name) <!-- Assuming First() to avoid null reference -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().EntryDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IsAdmitted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Room)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdmitted)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Room)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StudentID" class="btn btn-warning btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.StudentID" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.StudentID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
